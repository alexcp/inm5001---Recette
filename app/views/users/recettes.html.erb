<h1>Mes Recettes</h1>

<table class="table">
  <tr>
    <th>Image</th>
    <th>Titre</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @recettes.each do |recette| %>
  <tr>
    <td><%= image_tag recette.photo.url(:small), :class => "img_preview" %></td>
    <td><b><%= recette.titre %></b></td>
    <td><%= link_to 'Voir', recette , :class=>"btn btn-inverse" %></td>
    <td><%= link_to 'Modifier', edit_recette_path(recette) , :class=>"btn btn-inverse" %></td>
    <td><%= link_to 'Supprimer', recette, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-inverse" %></td>
  </tr>
<% end %>
</table>

