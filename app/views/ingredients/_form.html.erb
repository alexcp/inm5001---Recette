<%= form_for(@ingredient) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@ingredient.errors.count, "erreur") %> empêche l'ingrédient d'être enregistré:</h2>

      <ul>
      <% @ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom %>
    <%= f.label "Ingrédient Administrateur" %>
    <%= f.check_box :admin %>
  </div>

  <div class="field">
    <%= f.label :prix %>
    <%= f.text_field :prix %>
  </div>

  <div class="field">
    <%= f.label :proteine %>
    <%= f.text_field :proteine %>
  </div>

  <div class="field">
    <%= f.label :glucide %>
    <%= f.text_field :glucide %>
  </div>

  <div class="field">
    <%= f.label :gras %>
    <%= f.text_field :gras %>
  </div>


  <div>
   <h1> Ingredient en rabais </h1>
  </div>

  <div class="field">
    <%= f.label "En rabais..." %>
    <%= f.check_box :special %>
  </div>

  <div class="field">
    <%= f.label "Prix du rabais" %>
    <%= f.text_field :prix_special %>
  </div>

  <div class="field">
    <%= f.label "Épicier" %>
    <%= f.select :epicerie, Ingredient::EPICIER, {}, :class => "span2"  %>
  </div>

  <br />
  <br />
  <div class="actions">
    <%= f.submit "Sauvegarde" , :class=>"btn btn-inverse" %>
  </div>
<% end %>
