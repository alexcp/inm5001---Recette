<%= form_for(@ingredient) do |f| %>
  <% if @ingredient.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@ingredient.errors.count, "erreur") %> empêche l'ingrédient d'être enregistré:</h2>

      <ul>
      <% @ingredient.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nom %>
    <%= f.text_field :nom %>
  </div>

  <div class="field">
    <%= f.label :portion %>
    <%= f.text_field :portion %>
  </div>

  <div class="field">
    <%= f.label :unite_de_mesure %>
    <%= f.select :unite_de_mesure, Ingredient::UNITE_DE_MESURE %>
  </div>

  <div class="field">
    <%= f.label :prix %>
    <%= f.text_field :prix %>
  </div>

  <div class="field">
    <%= f.label :proteine %>
    <%= f.text_field :proteine %>
  </div>

  <div class="field">
    <%= f.label :glucide %>
    <%= f.text_field :glucide %>
  </div>

  <div class="field">
    <%= f.label :gras %>
    <%= f.text_field :gras %>
  </div>

  <br />
  <br />
  <div class="actions">
    <%= f.submit :class=>"btn btn-success" %>
  </div>
<% end %>
