<h1>Ajout d'une nouvelle recettes</h1>

<%= form_for @recipe do |f| %>
<p>
	<%= f.label :name %>
	<%= f.text_field :name %>
</p>
<p>
	<%= f.label :description %>
	<%= f.text_area :description %>
</p>
<p>
	<%= f.label :details %>
	<%= f.text_area :details %>
</p>

<%= f.submit %>
<% end %>
<hr />
<%= link_to 'Annuler', {:action => 'list'} %>