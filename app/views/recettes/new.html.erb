<%= nested_form_for(@recette) do |f| %>
<h3>Nouvelle recette</h3>
<%= link_to 'Retour', recettes_path, :class=>"btn" %>
<%= link_to 'Voir la recette', @recette, :class=>"btn btn-info"%>
<%= f.submit "Sauvegarder les changements", :class=>"btn btn-success" %>
<div class="row">
  <span class="span2">
    <%= image_tag @recette.photo.url(:medium) %>
  </span>
  <span class="span10">
  	<p>
    	<span class="span2">Titre : </span>
    	<%= f.text_field :titre, :placeholder => "Titre de votre recette", :class => "span8" %>
	</p>
    <p>
    	<span class="span2">Description : </span>
        <%= f.text_area :description, :placeholder => "Courte description de la recette", :class => "span8", :rows=>5 %>
    </p>
    <p>
    	<span class="span2">Changer l'image : </span>
        <%= f.file_field :photo , :class=> "btn-inverse upload"%> 
    </p>
  </span>
</div>

<div class="row">
  <div class="span6">
  	<h3>Les étapes de préparations</h3>
    <p>
    	<span class="span2">Préparation : </span>
        <%= f.text_area :preparation, :placeholder => "Les étapes de votre recette",:class => 'span4', :rows=>10 %>
    </p>
  </div>
  <div class="span6">
    <h3>Ingrédients <%= f.link_to_add '<i class="icon-plus" > </i> '.html_safe, :ingredient_recettes, :class=>"btn btn-info espace" %></h3>
      <table class="table table-striped">
    <%= f.fields_for :ingredient_recettes do |ingredient| -%>
      <tr>
        <td>
        	<%= ingredient.text_field :nom, :class => 'autocomplete', :placeholder => 'Nom', :autocomplete => "off", :onkeydown=> 'recherchable(this,this.value)', :class => 'span3' %>
        </td>
        <td class="fix_for_small_screen">
          <%= ingredient.text_field :quantite, :class => 'span1' %>
          <%= ingredient.select :unite_de_mesure, Ingredient::UNITE_DE_MESURE, {}, :class => "span2"  %>
      </tr>
    <% end %>
      </table>
  </div>
</div>
<% end %>
