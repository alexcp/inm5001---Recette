<%= nested_form_for(@recette) do |f| %>
  <% if @recette.errors.any? %>
    <div id="error_explanation" class="alert alert-error">
      <h2><%= pluralize(@recette.errors.count, "error") %> prohibited this recette from being saved:</h2>

      <ul>
      <% @recette.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :titre %>
    <%= f.text_field :titre %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :preparation %>
    <%= f.text_area :preparation %>
  </div>

  <%= f.fields_for :ingredient_recettes do |ingredient| %>
    <%= ingredient.label :nom %>
    <%= ingredient.text_field :nom %>

    <%= ingredient.label :quantite %>
    <%= ingredient.text_field :quantite %>

    <%= ingredient.label :unite_de_mesure %>
    <%= ingredient.select :unite_de_mesure, Ingredient::UNITE_DE_MESURE %>

    <%= ingredient.link_to_remove '<i class="icon-trash" > </i> '.html_safe, :class=>"btn btn-danger" %>
  <% end %>
  <%= f.link_to_add "Ajouter un ingredient", :ingredient_recettes, :class=>"btn" %>

  <br />
  <br />
  <div class="actions">
    <%= f.submit :class=>"btn btn-success" %>
  </div>
<% end %>
