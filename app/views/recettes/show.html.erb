<h1><%= @recette.titre.titleize %></h1>
<div class="row">
  <div class="span8">
    <h3>Description</h3>
    <hr />
    <%= @recette.description %>
    <h3>Prépararion</h3>
    <hr />
    <%= @recette.preparation %>
  </div>
  <div class="span4">
    <h3>Ingrédients</h3>
      <table class="table">
    <% @recette.ingredient_recettes.each do |ingredient| %>
      <tr>
        <td>
          <%= ingredient.nom %>
        </td>
        <td>
          <%= ingredient.quantite %> x <%= ingredient.unite_de_mesure %>
      </tr>
    <% end %>
      </table>
  </div>
</div>
<br />
<hr />
<%= link_to 'Modifier', edit_recette_path(@recette), :class=>"btn btn-info"%>
<%= link_to 'Retour', recettes_path, :class=>"btn"%>
